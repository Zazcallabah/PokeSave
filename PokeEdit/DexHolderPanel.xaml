<UserControl
	x:Class="PokeEdit.DexHolderPanel"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Margin="2">
	<GroupBox Header="PokeDex" BorderBrush="#808080" Background="#FFFFFF">

		<Grid>
			<Grid.RowDefinitions>
				<RowDefinition Height="25"/>
			</Grid.RowDefinitions>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="120"/>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="50"/>
				<ColumnDefinition Width="20"/>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="50"/>
				<ColumnDefinition Width="30"/>
			</Grid.ColumnDefinitions>
			<ComboBox
		Margin="2"
		FontSize="10" 
		IsTextSearchEnabled="True"
		IsEditable="True"
		Name="Selection"
		ItemsSource="{Binding}"
		DisplayMemberPath="Name" />

			<TextBlock Grid.Column="2" Padding="2"  VerticalAlignment="Center" HorizontalAlignment="Right" Text="Seen"/>
			<CheckBox Grid.Column="3" VerticalAlignment="Center" IsChecked="{Binding Path=SelectedItem.Seen,ElementName=Selection}"/>
			<TextBlock Grid.Column="5"  Padding="2" VerticalAlignment="Center" HorizontalAlignment="Right" Text="Owned"/>
			<CheckBox Grid.Column="6" VerticalAlignment="Center" IsChecked="{Binding Path=SelectedItem.Owned,ElementName=Selection}"/>
		</Grid> 
	</GroupBox>

</UserControl>
