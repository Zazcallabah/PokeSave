<UserControl x:Class="PokeEdit.MonsterListPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:PokeEdit="clr-namespace:PokeEdit"
			 Margin="0,2,0,2">
	<Expander Name="BorderLabel" BorderBrush="Gray" BorderThickness="1">
		<StackPanel>
			<ItemsControl ItemsSource="{Binding}">
				<ItemsControl.ItemTemplate>
					<DataTemplate>
						<PokeEdit:MonsterEntryPanel DataContext="{Binding}"/>
					</DataTemplate>
				</ItemsControl.ItemTemplate>
			</ItemsControl>
			<Button Content="Add" Click="ActivateNextClicked" Margin="2"/>
		</StackPanel>
	</Expander>
</UserControl>
