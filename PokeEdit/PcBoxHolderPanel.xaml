<UserControl x:Class="PokeEdit.PcBoxHolderPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:PokeEdit="clr-namespace:PokeEdit"
			 Margin="0,2,0,2">

	<Expander Header="PC Buffer" BorderBrush="Gray" BorderThickness="1">
		
		<TabControl Width="300" BorderThickness="0" ItemsSource="{Binding}">
			<TabControl.ContentTemplate>
				<DataTemplate>
					<PokeEdit:TeamListPanel DataContext="{Binding Content,Mode=OneWay}"/>
				</DataTemplate>
			</TabControl.ContentTemplate>
			<TabControl.ItemTemplate>
				<DataTemplate>
					<TextBlock Text="{Binding Title}"></TextBlock>
				</DataTemplate>
			</TabControl.ItemTemplate>
		</TabControl>
	</Expander>
</UserControl>
