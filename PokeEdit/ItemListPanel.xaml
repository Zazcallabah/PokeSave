<UserControl x:Class="PokeEdit.ItemListPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:PokeEdit="clr-namespace:PokeEdit"
             Margin="0,2,0,2">
	<UserControl.Resources>
		<PokeEdit:BoolToVisibilityConverter x:Key="VisiblityConverter"/>
	</UserControl.Resources>
	<Expander Name="BorderLabel" BorderBrush="Gray" BorderThickness="1" Width="150">
		<StackPanel>
			<ItemsControl ItemsSource="{Binding}" >
				<ItemsControl.ItemTemplate>
					<DataTemplate>
						<StackPanel Orientation="Horizontal" Visibility="{Binding Empty, Converter={StaticResource VisiblityConverter}}">
							<ComboBox
								Height="26"
								Margin="2,2,2,0"
								Width="115"
								IsTextSearchEnabled="True"
								IsEditable="True"
								ItemsSource="{Binding Names}"
								SelectedValue="{Binding Path=Name}" />
							<TextBox Height="26" Margin="0,2,2,0" Width="25" Text="{Binding Count}" />
						</StackPanel>
					</DataTemplate>
				</ItemsControl.ItemTemplate>
			</ItemsControl>
			<Button Content="Add" Click="ActivateNextClicked" Margin="2"/>
		</StackPanel>
	</Expander>
</UserControl>
