<UserControl x:Class="PokeEdit.ItemListPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:PokeEdit="clr-namespace:PokeEdit"
             mc:Ignorable="d" 
             d:DesignHeight="28" d:DesignWidth="108" Margin="0,2,0,2">
	<UserControl.Resources>
		<PokeEdit:BoolToVisibilityConverter x:Key="VisiblityConverter"/>
	</UserControl.Resources>
	<Expander Name="BorderLabel" BorderBrush="Gray" BorderThickness="1">
		<StackPanel>
			<ItemsControl ItemsSource="{Binding}">
				<ItemsControl.ItemTemplate>
					<DataTemplate>
						<StackPanel Orientation="Horizontal" Visibility="{Binding Empty, Converter={StaticResource VisiblityConverter}}">
							<ComboBox
								Height="26"
								Margin="4"
								Width="120"
								IsTextSearchEnabled="True"
								IsEditable="True"
								ItemsSource="{Binding Names}"
								SelectedValue="{Binding Path=Name}" />
							<TextBox Height="26" Margin="4" Width="30" Text="{Binding Count}" />
						</StackPanel>
					</DataTemplate>
				</ItemsControl.ItemTemplate>
			</ItemsControl>
			<Button Content="Add" Click="ActivateNextClicked" Margin="2"/>
		</StackPanel>
	</Expander>
</UserControl>
