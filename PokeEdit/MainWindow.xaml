<Window
	x:Class="PokeEdit.MainWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:PokeEdit="clr-namespace:PokeEdit"
	Title="PokeEdit" Height="480" Width="500" AllowDrop="True">
	<Grid Background="#D3D3D3">
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="30"/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>

		<Border BorderBrush="#000000" BorderThickness="0,0,0,1">
		<ScrollViewer Grid.Row="0" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Visible" Background="#FFFFFF">
			<ItemsControl ItemsSource="{Binding}">
				<ItemsControl.ItemTemplate>
					<DataTemplate>
						<Border CornerRadius="8"
								Margin="8"
								BorderThickness="2"
								BorderBrush="#000000"
								Padding="4"
								Width="350"
								Background="#FFF2F2">
							<StackPanel>
								<PokeEdit:SaveControl DataContext="{Binding}"/>
								<StackPanel Orientation="Horizontal">
									<Button Height="26" Margin="4" Width="75" Content="Save" Click="SaveButtonClicked" />
									<Button Height="26" Margin="4" Width="75" Content="Save as" Click="SaveAsButtonClicked" />
								</StackPanel>
							</StackPanel>
						</Border>	
					</DataTemplate>
				</ItemsControl.ItemTemplate>
				<ItemsControl.ItemsPanel>
					<ItemsPanelTemplate>
						<StackPanel Orientation="Horizontal"/>
					</ItemsPanelTemplate>
				</ItemsControl.ItemsPanel>
			</ItemsControl>
		</ScrollViewer>
		</Border>
		<TextBlock Grid.Row="1" Margin="4" HorizontalAlignment="Right" Height="22" Name="Info"/>
		<Button Grid.Row="1" Margin="4" Content="Load" HorizontalAlignment="Left" Height="22" Width="75" Click="LoadButtonClicked" />
	</Grid>
</Window>
