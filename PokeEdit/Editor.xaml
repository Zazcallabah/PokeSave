<Window x:Class="PokeEdit.Editor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Editor" Height="300" Width="300" >
    <Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="75"/>
			<ColumnDefinition Width="75"/>
			<ColumnDefinition Width="75"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="25"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>
		<ComboBox Name="Selection">
			<ComboBoxItem>1</ComboBoxItem>
			<ComboBoxItem>2</ComboBoxItem>
				</ComboBox>
		<Button Click="Load" Grid.Column="1">Load</Button>
		<Button Click="Save" Grid.Column="2">Save</Button>
		<ScrollViewer Grid.ColumnSpan="4" Grid.Row="1">
			<TextBox FontFamily="Consolas" AcceptsReturn="True" Name="Text" ></TextBox>
		</ScrollViewer>
	</Grid>
</Window>
